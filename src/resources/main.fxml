<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.Controller">
   <children>
      <HBox>
         <children>
            <Button maxHeight="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" onAction="#clearHandler" text="Clear">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <TextField fx:id="serverAdr" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button maxHeight="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" onAction="#sendHandler" text="Send">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <items>
            <TextArea fx:id="serverMsg" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true">
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </TextArea>
            <TextArea fx:id="clientMsg" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: red;" wrapText="true">
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </TextArea>
         </items>
      </SplitPane>
   </children>
</VBox>
